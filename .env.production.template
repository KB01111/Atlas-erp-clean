# Atlas-ERP Production Environment Configuration
# Copy this file to .env.production and fill in the values for your production environment

# Development Mode - Should be false in production
USE_MOCK_SERVICES=false

# SurrealDB Configuration
# For production, use your SurrealDB instance URL
SURREAL_URL=https://your-surrealdb-instance.com
SURREAL_NS=atlas
SURREAL_DB=erp
SURREAL_USER=your-production-username
SURREAL_PASS=your-production-password

# MinIO Configuration
# For production, use your MinIO instance URL
MINIO_ENDPOINT=your-minio-instance.com
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=your-production-access-key
MINIO_SECRET_KEY=your-production-secret-key
MINIO_BUCKET=atlas-erp-prod

# ArangoDB Configuration
# For production, use your ArangoDB instance URL
ARANGO_URL=https://your-arangodb-instance.com
ARANGO_DB=atlas_knowledge_prod
ARANGO_USER=your-production-username
ARANGO_PASSWORD=your-production-password
ARANGO_ROOT_PASSWORD=your-root-password

# Temporal Configuration
# For production, use your Temporal instance URL
TEMPORAL_ADDRESS=your-temporal-instance.com:7233
TEMPORAL_NAMESPACE=default

# CopilotKit Configuration
COPILOTKIT_API_KEY=your-production-api-key
COPILOTKIT_API_URL=https://api.copilotkit.ai

# LiteLLM Configuration
LITELLM_API_KEY=your-production-api-key
LITELLM_API_URL=https://api.litellm.ai

# Pipedream Configuration
PIPEDREAM_API_KEY=your-production-pipedream-api-key
PIPEDREAM_API_URL=https://api.pipedream.com/v1
PIPEDREAM_ORG_ID=your-production-pipedream-org-id
PIPEDREAM_WORKSPACE_ID=your-production-pipedream-workspace-id

# Nango Configuration
NANGO_API_URL=https://api.nango.dev
NANGO_SECRET_KEY=your-production-nango-secret-key
NANGO_PUBLIC_KEY=your-production-nango-public-key

# Next.js Configuration
NEXT_PUBLIC_APP_URL=https://your-production-app-url.com

# Node Environment - Should be 'production' for production deployments
NODE_ENV=production

# Optional: Set this to true if running in Docker
# DOCKER_COMPOSE=true
