# Atlas-ERP Environment Configuration

# SurrealDB Configuration
# For production, use strong, unique credentials
SURREAL_URL=http://localhost:8000
SURREAL_NS=atlas
SURREAL_DB=erp
SURREAL_USER=root
SURREAL_PASS=root

# MinIO Configuration
# For production, use strong, unique credentials and enable SSL
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=atlas-erp

# Temporal Configuration
# For production, consider using a more robust database like PostgreSQL
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default

# LLM Configuration
# Add your API key for the selected provider
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4o

# Optional: Fallback LLM Configuration
# LLM_FALLBACK_PROVIDER=anthropic
# LLM_FALLBACK_MODEL=claude-3-opus-20240229
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Azure OpenAI (if using Azure)
# AZURE_API_KEY=your-azure-api-key-here
# AZURE_API_BASE=https://your-resource-name.openai.azure.com

# CopilotKit Configuration
COPILOTKIT_API_KEY=ck_pub_4e87be87ce5fcbc54805a9597fd74013

# Pipedream Configuration
# Add your API key from Pipedream
PIPEDREAM_API_KEY=your-pipedream-api-key-here
PIPEDREAM_API_URL=https://api.pipedream.com/v1
# Optional: Organization and Workspace IDs
# PIPEDREAM_ORG_ID=your-pipedream-org-id
# PIPEDREAM_WORKSPACE_ID=your-pipedream-workspace-id

# Nango Configuration
# Add your API key from Nango
NANGO_API_URL=https://api.nango.dev
NANGO_SECRET_KEY=your-nango-secret-key-here
NANGO_PUBLIC_KEY=your-nango-public-key-here

# Development Mode
# Set to true to use mock services instead of real ones
USE_MOCK_SERVICES=false

# Production Settings (Uncomment for production)
# MINIO_USE_SSL=true
# SURREAL_URL=https://your-surrealdb-host:8000
# TEMPORAL_ADDRESS=your-temporal-host:7233
