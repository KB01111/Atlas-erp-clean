# Atlas-ERP Production Environment Configuration

# SurrealDB Configuration
SURREAL_URL=https://surrealdb.example.com:8000
SURREAL_NS=atlas
SURREAL_DB=erp
SURREAL_USER=strong_username
SURREAL_PASS=strong_password

# MinIO Configuration
MINIO_ENDPOINT=minio.example.com
MINIO_PORT=9000
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=strong_access_key
MINIO_SECRET_KEY=strong_secret_key
MINIO_BUCKET=atlas-erp
MINIO_BROWSER_REDIRECT_URL=https://minio-console.example.com
MINIO_SERVER_URL=https://minio.example.com

# Temporal Configuration
TEMPORAL_ADDRESS=temporal.example.com:7233
TEMPORAL_NAMESPACE=default

# PostgreSQL Configuration for Temporal
POSTGRES_USER=temporal
POSTGRES_PASSWORD=strong_password
POSTGRES_DB=temporal

# LLM Configuration
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key
LLM_MODEL=gpt-4o

# CopilotKit Configuration
COPILOTKIT_API_KEY=your_copilotkit_api_key

# Frontend URL
FRONTEND_URL=https://atlas-erp.example.com

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=strong_password
